@model ProyectoDSW_Cosmeticos.Models.Producto

@{
    ViewData["Title"] = "AgregarProducto";
}
<nav class="navbar fixed-top bg-primary">
    <div class="container">
        <a class="navbar-brand text-white title-nav" href="Portal">BBB - MANTENIMIENTOS</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="text-white" id="t">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex flex-row gap-3">
                <li class="nav-item">
                    <a asp-action="ListaProductos" asp-controller="Mantenimiento" class="btn btn-outline-light">Productos</a>
                </li>
                <li class="nav-item">
                    <a asp-action="listaUsuarios" asp-controller="Mantenimiento" class="btn btn-outline-light">Usuarios</a>
                </li>
                <li class="nav-item">
                    <a asp-action="ListaCategorias" asp-controller="Mantenimiento" class="btn btn-outline-light">Categorias</a>
                </li>
                <li class="nav-item">
                    <a asp-action="ListaPedidos" asp-controller="Mantenimiento" class="btn btn-outline-light">Pedidos</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="mt-5 pt-4">
<h1>Agregar Producto Nuevo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarProducto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
            <div class="form-group">
                <label asp-for="nombreproducto" class="control-label"></label>
                <input asp-for="nombreproducto" class="form-control" />
                <span asp-validation-for="nombreproducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idcategoria" class="control-label"></label>
                <select asp-for="idcategoria" asp-items="@ViewBag.categorias" class="form-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="unidades" class="control-label"></label>
                <input asp-for="unidades" class="form-control" />
                <span asp-validation-for="unidades" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ruta" class="control-label"></label>
                <input asp-for="ruta" class="form-control" />
                <span asp-validation-for="ruta" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 d-flex justify-content-center gap-3">
                <input type="submit" value="Registrar" class="btn btn-success" />
                <a class="btn btn-warning" asp-action="ListaProductos">Regresar a Lista</a>
            </div>
        </form>

    </div>
    <div class="alert-success mt-3">
        @ViewBag.mensaje
    </div>
</div>
</div>

