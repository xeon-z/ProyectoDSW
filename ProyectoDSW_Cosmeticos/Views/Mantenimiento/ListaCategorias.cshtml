@model IEnumerable<ProyectoDSW_Cosmeticos.Models.Categoria>

@{
    ViewData["Title"] = "ListaCategorias";
}
<nav class="navbar fixed-top bg-primary">
    <div class="container">
        <a class="navbar-brand text-white title-nav" href="Portal">BBB - MANTENIMIENTOS</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="text-white" id="t">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex flex-row gap-3">
                <li class="nav-item">
                    <a asp-action="ListaProductos" asp-controller="Mantenimiento" class="btn btn-outline-light">Productos</a>
                </li>
                <li class="nav-item">
                    <a asp-action="listaUsuarios" asp-controller="Mantenimiento" class="btn btn-outline-light">Usuarios</a>
                </li>
                <li class="nav-item">
                    <a asp-action="ListaCategorias" asp-controller="Mantenimiento" class="btn btn-outline-light">Categorias</a>
                </li>
                <li class="nav-item">
                    <a asp-action="ListaPedidos" asp-controller="Mantenimiento" class="btn btn-outline-light">Pedidos</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="mt-5 pt-4">
    <div class="d-flex align-items-center justify-content-between">
<h1>Lista de Categorias</h1>
<a class="btn btn-success" asp-action="AgregarCategoria">Registrar</a>
    </div>
    <hr/>
    <table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                        @Html.ActionLink("Editar", "EditarCategoria", new { id=item.id },new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Productos", "ListaProductosCategoria", new { id=item.id  },new { @class = "btn btn-warning" })
                    </td>
        </tr>
}
    </tbody>
</table>
    <div>@ViewBag.mensaje</div>
    <div>
        <a class="btn btn-dark" href="/EComerce/Portal">ir al Portal</a>
    </div>
</div>