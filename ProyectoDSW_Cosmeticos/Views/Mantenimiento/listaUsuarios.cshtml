@model IEnumerable<ProyectoDSW_Cosmeticos.Models.Usuario>

@{
    ViewData["Title"] = "listaUsuarios";
}
<nav class="navbar fixed-top bg-primary">
    <div class="container">
        <a class="navbar-brand text-white title-nav" href="Portal">BBB - MANTENIMIENTOS</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="text-white" id="t">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex flex-row gap-3">
                <li class="nav-item">
                    <a asp-action="ListaProductos" asp-controller="Mantenimiento" class="btn btn-outline-light">Productos</a>
                </li>
                <li class="nav-item">
                    <a asp-action="listaUsuarios" asp-controller="Mantenimiento" class="btn btn-outline-light">Usuarios</a>
                </li>
                <li class="nav-item">
                    <a asp-action="ListaCategorias" asp-controller="Mantenimiento" class="btn btn-outline-light">Categorias</a>
                </li>
                <li class="nav-item">
                    <a asp-action="ListaPedidos" asp-controller="Mantenimiento" class="btn btn-outline-light">Pedidos</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="mt-5 pt-4">
    <div class="d-flex align-items-center justify-content-between">
<h1>Lista de Usuarios</h1>
    <a class="btn btn-success" asp-action="AgregarUsuario">Registrar</a>
    </div>
<hr/>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.intentos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.intentos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rol)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarUsuario", new { id=item.Dni },new { @class = "btn btn-primary" }) 
                   @Html.ActionLink("Eliminar", "EliminarUsuario", new { id=item.Dni },new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>@ViewBag.mensaje</div>
<div>
    <a class="btn btn-dark" href="/EComerce/Portal">ir al Portal</a>
</div>
</div>