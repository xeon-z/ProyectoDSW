@model ProyectoDSW_Cosmeticos.Models.Usuario

@{
    ViewData["Title"] = "Logueo";
}
<div class="container vh-100 vw-100 d-flex justify-content-center align-items-center overflow-hidden">
    <div class="div-login shadow-lg bg-login title-login w-50">
        <div class="row w-100 justify-content-center m-0 bg-white  div-login ">
            <div class="p-0 bg-primary login-title p-3 mb-3">
                <h1 class="text-center p-0">¡Bienvenido a BBB Recycling!</h1>
            </div>
            <div class="col-md-5  text-black bg-white">
        <form asp-action="Logueo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="login" class="control-label"></label>
                <input asp-for="login" class="form-control" />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="p-1"></div>
            <div class="form-group">
                <label asp-for="clave" class="control-label"></label>
                <input asp-for="clave" class="form-control" type="password" />                       
                <span asp-validation-for="clave" class="text-danger"></span>
            </div>
            <div class="form-group py-4 d-flex w-100 gap-3 justify-content-center">
                <a asp-action="Logueo" class="btn btn-danger">Limpiar</a>
                <input type="submit" value="Loguear" class="btn btn-success" />
            </div>
        </form>
                <div class="alert-danger">
                    @ViewBag.mensaje
                </div>
    </div>
</div>
@if (ViewBag.alerta == "ALERTA") { 
    <script type="text/javascript">
  alert("Usuario Incorrecto!");
</script>
}

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

