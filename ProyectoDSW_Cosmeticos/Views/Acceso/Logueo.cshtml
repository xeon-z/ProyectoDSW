@model ProyectoDSW_Cosmeticos.Models.Usuario

@{
    ViewData["Title"] = "Logueo";
}

<h1>¡Bienvenido a BBB Recycling!</h1>


<hr />
<div class="row mx-auto">
    <div class="col-md-4">
        <form asp-action="Logueo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="login" class="control-label"></label>
                <input asp-for="login" class="form-control" />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clave" class="control-label"></label>
                <input asp-for="clave" class="form-control" type="password" />                       
                <span asp-validation-for="clave" class="text-danger"></span>
            </div>
            <div class="form-group py-4">
                <a asp-action="Logueo" class="btn btn-danger">Limpiar</a>
                <input type="submit" value="Loguear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.alerta == "ALERTA") { 
    <script type="text/javascript">
  alert("Usuario Incorrecto!");
</script>
}
<div>
    @ViewBag.mensaje
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

