@model ProyectoDSW_Cosmeticos.Models.Usuario

@{
    ViewData["Title"] = "Logueo";
}
<div class="container vh-100 vw-100 d-flex justify-content-center align-items-center overflow-hidden">
    <div class="bg-green-400 p-3 rounded-3 shadow-lg">
<h1 class="text-center">¡Bienvenido a BBB Recycling!</h1>


<hr />
<div class="row w-100 justify-content-center">
            <div class="col-md-5">
        <form asp-action="Logueo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="login" class="control-label"></label>
                <input asp-for="login" class="form-control" />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clave" class="control-label"></label>
                <input asp-for="clave" class="form-control" type="password" />                       
                <span asp-validation-for="clave" class="text-danger"></span>
            </div>
            <div class="form-group py-4 d-flex w-100 gap-3 justify-content-center">
                <a asp-action="Logueo" class="btn btn-danger">Limpiar</a>
                <input type="submit" value="Loguear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.alerta == "ALERTA") { 
    <script type="text/javascript">
  alert("Usuario Incorrecto!");
</script>
}
<div>
    @ViewBag.mensaje
</div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

